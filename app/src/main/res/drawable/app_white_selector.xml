<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>
            <gradient android:startColor="@color/colorLightGrey2"
                android:endColor="@color/colorLightGrey2"/>
            <corners
                android:radius="@dimen/_25sdp"/>
        </shape>
    </item>



    <item>


        <shape>
        <gradient android:startColor="@color/colorWhite"
            android:angle="270"
            android:centerColor="@color/colorWhite"
            android:endColor="@color/colorWhite"/>

            <corners
                android:radius="@dimen/_25sdp"/>
        </shape>
    </item>

</selector>