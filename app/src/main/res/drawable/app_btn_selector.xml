<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>
            <gradient android:startColor="#CE1721"
                android:endColor="#CE1721"/>
            <corners
                android:radius="@dimen/_25sdp"/>
        </shape>
    </item>



    <item>


        <shape>
        <gradient android:startColor="@color/appColor"
            android:angle="270"
            android:centerColor="@color/appColor"
            android:endColor="@color/appColor"/>

            <corners
                android:radius="@dimen/_25sdp"/>
        </shape>
    </item>

</selector>