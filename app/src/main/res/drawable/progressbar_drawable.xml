<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/_10sdp" />
            <gradient
                android:startColor="@color/selectorGrey"
                android:centerColor="@color/selectorGrey"
                android:endColor="@color/selectorGrey"
                />
        </shape>
    </item>

    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="@dimen/_10sdp" />
                <gradient
                    android:startColor="#FF2B37"
                    android:endColor="#D10909"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>