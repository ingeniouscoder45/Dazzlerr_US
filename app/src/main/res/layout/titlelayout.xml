<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/_10sdp"
        app:cardBackgroundColor="@color/appColor">

<RelativeLayout
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="@dimen/_40sdp">

    <RelativeLayout
        android:id="@+id/leftLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:visibility="visible"
        android:padding="@dimen/_5sdp"
        android:layout_centerVertical="true">

    <ImageView
    android:id="@+id/leftbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:layout_centerVertical="true"
    android:background="@drawable/ic_menu_black_24dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/titletxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/leftLayout"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:textSize="@dimen/_14sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/notificationMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/messageCountLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_36sdp"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:src="@drawable/message_icon"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/messageCounttxt"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:text=""
                android:gravity="center"
                android:layout_marginLeft="-2dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorBlack"
                android:background="@drawable/white_circle2"
                android:visibility="gone"
                android:textSize="@dimen/_8sdp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/notificationCountLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_36sdp"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_notifications_24"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_gravity="center_vertical"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/notificationCounttxt"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:text=""
                android:gravity="center"
                android:layout_marginLeft="-8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorBlack"
                android:background="@drawable/white_circle2"
                android:visibility="gone"
                android:textSize="@dimen/_8sdp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rightlayout"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:visibility="visible"
        android:paddingRight="@dimen/_10sdp"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/rightbtn"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_gravity="center_vertical"
        android:visibility="visible"
        android:background="@drawable/ic_location"/>

    <TextView
        android:id="@+id/righttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="@dimen/_2sdp"
        android:visibility="visible"/>
    </LinearLayout>
</RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>
