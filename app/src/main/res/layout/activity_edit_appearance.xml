<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.fragments.appearance.AppearanceFragment">

        <include layout="@layout/simpletitlelayout"
            android:id="@+id/titleLayout"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/appColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <LinearLayout
                        android:id="@+id/appearanceFeetpickerBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feet"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/colorLightGrey"
                            android:layout_gravity="center_vertical"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/edittext_border"
                            android:backgroundTint="@color/selectorGrey">

                            <TextView
                                android:id="@+id/appearanceFeetTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:hint="-"/>

                            <ImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                android:tint="@color/colorLightGrey"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/appearanceInchpickerBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inch"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/colorLightGrey"
                            android:layout_gravity="center_vertical"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/edittext_border"
                            android:backgroundTint="@color/selectorGrey">

                            <TextView
                                android:id="@+id/appearanceInchTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:hint="-"
                                android:gravity="center"/>


                            <ImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                android:tint="@color/colorLightGrey"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/appColor"/>

                        <EditText
                            android:id="@+id/appearanceWeightEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/edittext_border"
                            android:backgroundTint="@color/selectorGrey"
                            android:textSize="@dimen/_10sdp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:maxLength="4"
                            android:hint="Kg"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Biceps"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/appColor"/>

                        <EditText
                            android:id="@+id/appearanceBicepsEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/edittext_border"
                            android:backgroundTint="@color/selectorGrey"
                            android:textSize="@dimen/_10sdp"
                            android:singleLine="true"
                            android:maxLength="4"
                            android:inputType="number"
                            android:hint="Inches"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chest / Bust"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/appColor"/>

                        <EditText
                            android:id="@+id/appearanceChestEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/edittext_border"
                            android:backgroundTint="@color/selectorGrey"
                            android:textSize="@dimen/_10sdp"
                            android:singleLine="true"
                            android:maxLength="4"
                            android:inputType="number"
                            android:hint="Inches"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waist"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/appColor"/>

                        <EditText
                            android:id="@+id/appearanceWaistEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/edittext_border"
                            android:backgroundTint="@color/selectorGrey"
                            android:textSize="@dimen/_10sdp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:maxLength="4"
                            android:hint="Inches"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hips"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/appColor"/>

                <EditText
                    android:id="@+id/appearanceHipsEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_border"
                    android:backgroundTint="@color/selectorGrey"
                    android:textSize="@dimen/_10sdp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:maxLength="4"
                    android:hint="Inches"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hair Color"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/appColor"/>

                <RelativeLayout
                    android:id="@+id/appearanceHairColorBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:backgroundTint="@color/selectorGrey">

                    <TextView
                        android:id="@+id/appearanceHairColorTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-Select-"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:singleLine="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:gravity="center_vertical"
                        app:tint="#737373" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hair Length"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/appColor"/>


                <RelativeLayout
                    android:id="@+id/appearanceHairLengthBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:backgroundTint="@color/selectorGrey">

                    <TextView
                        android:id="@+id/appearanceHairLengthTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-Select-"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:singleLine="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:gravity="center_vertical"
                        app:tint="#737373" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hair Type"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/appColor"/>


                <RelativeLayout
                    android:id="@+id/appearanceHairTypeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:backgroundTint="@color/selectorGrey">

                    <TextView
                        android:id="@+id/appearanceHairTypeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-Select-"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:singleLine="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:gravity="center_vertical"
                        app:tint="#737373" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eye color"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/appColor"/>



                <RelativeLayout
                    android:id="@+id/appearanceEyeColorBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:backgroundTint="@color/selectorGrey">

                    <TextView
                        android:id="@+id/appearanceEyeColorTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-Select-"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:singleLine="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:gravity="center_vertical"
                        app:tint="#737373" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skin Tone"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/appColor"/>


                <RelativeLayout
                    android:id="@+id/appearanceSkinToneBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:backgroundTint="@color/selectorGrey">

                    <TextView
                        android:id="@+id/appearanceSkinToneTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-Select-"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:singleLine="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:gravity="center_vertical"
                        app:tint="#737373" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dress"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/appColor"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_border"
                    android:backgroundTint="@color/selectorGrey">
                    <com.dazzlerr_usa.utilities.MultiSelectionSpinner
                        android:id="@+id/appearanceDressSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <TextView
                        android:id="@+id/appearanceDressSpinnerTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-Select-"
                        android:textSize="@dimen/_11sdp"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_5sdp"
                        android:visibility="gone"
                        android:textColor="@color/colorBlack"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shoes"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/appColor"/>


                <RelativeLayout
                    android:id="@+id/appearanceShoesBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:backgroundTint="@color/selectorGrey">

                    <TextView
                        android:id="@+id/appearanceShoesTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-Select-"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:singleLine="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:gravity="center_vertical"
                        app:tint="#737373" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tags"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/appColor"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/appearanceTagsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_border"
                    android:backgroundTint="@color/selectorGrey">

                    <EditText
                        android:id="@+id/appearanceTagsEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_3sdp"
                        android:textSize="@dimen/_10sdp"
                        android:maxLength="50"
                        android:inputType="textCapSentences"
                        android:hint="Enter your tag here"/>

                    <Button
                        android:id="@+id/appearanceAddTagsBtn"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="match_parent"
                        android:background="@color/appColor"
                        android:textSize="@dimen/_10sdp"
                        android:text="Add"
                        android:textColor="@color/colorWhite"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/appearanceSubmitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:text="Submit"
                    android:textSize="@dimen/_10sdp"
                    android:background="@drawable/app_btn_selector"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/_20sdp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/aviProgressBar"
            style="@style/SpinKitView.RotatingPlane"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/appColor" />


    </RelativeLayout>
</layout>