<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.events.activities.EventsFilterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/simpletitlelayout"
            android:id="@+id/titleLayout"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Category"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

            <RelativeLayout
                android:id="@+id/eventCategoryBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/edittextbottomborder"
                android:layout_marginTop="@dimen/_2sdp"
                android:backgroundTint="@color/colorBlack">

                <TextView
                    android:id="@+id/eventCategoryTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Select"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_11sdp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:gravity="center_vertical"
                    app:tint="@color/colorBlack" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlack"/>

            <RelativeLayout
                android:id="@+id/eventCityBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/edittextbottomborder"
                android:layout_marginTop="@dimen/_2sdp"
                android:backgroundTint="@color/colorBlack">

                <TextView
                    android:id="@+id/eventCityTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Select"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_11sdp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:gravity="center_vertical"
                    app:tint="@color/colorBlack" />

            </RelativeLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Venue"
                    android:textAllCaps="true"
                android:textStyle="bold"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/colorBlack"/>

                <RelativeLayout
                    android:id="@+id/eventVenueBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/edittextbottomborder"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:backgroundTint="@color/colorBlack">

                    <TextView
                        android:id="@+id/eventVenueTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Select"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_11sdp"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:singleLine="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:gravity="center_vertical"
                        app:tint="@color/colorBlack" />

                </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizer"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlack"/>

            <RelativeLayout
                android:id="@+id/eventOrganizerBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/edittextbottomborder"
                android:layout_marginTop="@dimen/_2sdp"
                android:backgroundTint="@color/colorBlack">

                <TextView
                    android:id="@+id/eventOrganizerTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Select"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_11sdp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:gravity="center_vertical"
                    app:tint="@color/colorBlack" />

            </RelativeLayout>

            </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/applyFilterBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/appColor"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_12sdp"
        android:layout_alignParentBottom="true"
        android:text="Apply Filters"/>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/aviProgressBar"
        style="@style/SpinKitView.RotatingPlane"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/appColor" />
</RelativeLayout>

</layout>