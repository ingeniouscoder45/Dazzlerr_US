<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">


    <TextView
        android:id="@+id/typeTxt"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Reject user"
        android:textAllCaps="true"
        android:textSize="@dimen/_12sdp"
        android:padding="@dimen/_10sdp"/>

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/ic_dialog_close_dark"
            android:background="@color/appColor"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_10sdp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorLightGrey"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:text="Message"/>

    <EditText
        android:id="@+id/messageEdittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/colorDarkGrey"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:hint="Type your message here..."
        android:maxLength="300"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="start"
        android:inputType="textCapSentences|textMultiLine"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/edittext_border"
        android:backgroundTint="@color/selectorGrey"
        />

    <TextView
        android:id="@+id/messageCharactersTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightGrey"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="Characters left: 300"/>
    <Button
        android:id="@+id/messageSubmitBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:textSize="@dimen/_11sdp"
        android:text="Submit"
        android:textColor="@color/colorWhite"
        android:background="@color/appColor"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"/>
</LinearLayout>
