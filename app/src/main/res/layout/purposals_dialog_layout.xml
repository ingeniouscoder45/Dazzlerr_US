<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/appColor"
            android:gravity="center_vertical"
            android:id="@+id/title_layout"
            android:layout_height="@dimen/_40sdp">

            <ImageView
                android:id="@+id/leftbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_back_white_32dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/proposalsMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_70sdp"
            android:adjustViewBounds="true"
            android:layout_gravity="start"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/purposalUsernameTxt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="Rahul"/>


            </LinearLayout>


            <TextView
                android:id="@+id/purposalUserroleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/appColor"
                android:text="Model"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:text="Applied on: "/>

            <TextView
                android:id="@+id/purposalDateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorLightGrey"
                android:text="2 weeks ago"/>

            </LinearLayout>
            <TextView
                android:id="@+id/purposalDescriptionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/_5sdp"
                android:lineSpacingMultiplier="1.3"
                android:text=""/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <Button
            android:id="@+id/proposalShortlistBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_24sdp"
            android:layout_weight="1"
            android:text="Shortlist"
            android:gravity="center"
            android:background="@drawable/edittext_round_border1"
            android:textColor="@color/appColor"
            android:layout_marginRight="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"/>


        <Button
            android:id="@+id/proposalHireBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_24sdp"
            android:layout_weight="1"
            android:text="Hire"
            android:gravity="center"
            android:background="@drawable/edittext_round_border1"
            android:textColor="@color/appColor"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"/>

        <Button
            android:id="@+id/proposalRejectBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_24sdp"
            android:layout_weight="1"
            android:text="Reject"
            android:gravity="center"
            android:background="@drawable/edittext_round_border1"
            android:textColor="@color/appColor"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"/>

    </LinearLayout>
</LinearLayout>
