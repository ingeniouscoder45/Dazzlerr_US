<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/appColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Audio"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="match_parent"
            android:id="@+id/dialogCloseBtn"
            android:src="@drawable/ic_dialog_close_dark"
            app:tint="@color/colorWhite"
            android:padding="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio File: "
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/appColor"/>


        <TextView
            android:id="@+id/audioUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/colorBlack"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/appColor"/>

    <EditText
        android:id="@+id/audioTitleEdittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:textColor="@color/colorDarkGrey"
        android:background="@drawable/edittext_border"
        android:backgroundTint="@color/colorLightGrey"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:textSize="@dimen/_11sdp"
        android:singleLine="true"
        android:maxLength="70"
        android:inputType="textCapSentences"
        android:hint="Enter your audio title here"/>

        <Button
            android:id="@+id/audioSubmitBtn"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/app_btn_selector"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="Upload Audio"
            android:textSize="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"/>
</LinearLayout>
</LinearLayout>