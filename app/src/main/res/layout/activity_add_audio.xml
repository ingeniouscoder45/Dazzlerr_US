<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <include layout="@layout/simpletitlelayout"
        android:id="@+id/titleLayout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/appColor"/>

        <EditText
            android:id="@+id/audioTitleEdittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:textColor="@color/colorDarkGrey"
            android:background="@drawable/edittext_border"
            android:backgroundTint="@color/colorLightGrey"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:textSize="@dimen/_11sdp"
            android:singleLine="true"
            android:maxLength="70"
            android:inputType="textCapSentences"
            android:hint="Enter your audio title here"/>


        <TextView
            android:id="@+id/audioUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/colorBlack"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <Button
                android:id="@+id/addEditAudioBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/selectorGrey"
                android:text="Pick Audio"
                android:textSize="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorBlack"/>


            <Button
                android:id="@+id/audioSubmitBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/appColor"
                android:text="Upload Audio"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorWhite"/>


        </LinearLayout>



    </LinearLayout>

    </ScrollView>
</LinearLayout>
</layout>