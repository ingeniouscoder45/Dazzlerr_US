<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".views.fragments.modelaccountverification.AccountVerificationFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:background="@color/appColor"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_17sdp"
            android:text="Verify Account"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_15sdp"
            />

        <TextView
            android:id="@+id/recoveryType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your account is not verified. Please verify your account. "
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify via email"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/appColor"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <TextView
                    android:id="@+id/verifyEmailText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="@dimen/_2sdp"
                    android:paddingRight="@dimen/_2sdp"
                    android:textSize="@dimen/_12sdp"
                    />

                <Button
                    android:id="@+id/verifyEmailButton"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="Verify"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_10sdp"
                    android:background="@color/appColor"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:visibility="gone"
            android:orientation="vertical">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify via mobile number"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/appColor"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/edittext_border"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <TextView
            android:id="@+id/verifyPhoneText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorBlack"
            android:singleLine="true"
            android:digits="1234567890"
            android:inputType="textFilter|phone"
            android:maxLength="10"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            />

        <Button
            android:id="@+id/verifyPhoneButton"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            android:text="Verify"
            android:textAllCaps="false"
            android:textSize="@dimen/_10sdp"
            android:background="@color/appColor"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
</layout>