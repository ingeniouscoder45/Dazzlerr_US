<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pickerui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    pickerui:cardBackgroundColor="@color/colorWhite"
    pickerui:cardElevation="@dimen/_10sdp"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.dpizarro.uipicker.library.picker.PickerUI
        android:id="@+id/picker_ui_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/doneBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/appColor"/>
</LinearLayout>
    </androidx.cardview.widget.CardView>