<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:layout_width="@dimen/_49sdp"
        android:layout_height="@dimen/_49sdp"
        android:background="@color/selectorGrey"
        android:src="@drawable/ic_music_note2"
        android:padding="@dimen/_15sdp"
        android:layout_gravity="start"
        app:tint="@color/colorLightGrey"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/_6sdp"
        android:paddingRight="@dimen/_5sdp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="-2dp"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:id="@+id/audioTitle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:text="Added on: "
                android:textColor="@color/black"
                android:singleLine="true" />


            <TextView
                android:id="@+id/audioDateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorLightGrey"
                android:singleLine="true" />

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/audioPlayBtn"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_gravity="center_vertical"
        android:textAllCaps="false"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/grey_border_circle"
        android:backgroundTint="@color/appColor"
        android:src="@drawable/ic_media_play_dark"
        app:tint="@color/appColor" />

</LinearLayout>
</layout>
