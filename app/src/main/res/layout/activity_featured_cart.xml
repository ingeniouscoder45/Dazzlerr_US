<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.activities.becomefeatured.FeaturedCartActivity">

    <include layout="@layout/simpletitlelayout"
        android:id="@+id/titleLayout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cartOfferImage"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_120sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured Addon"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:id="@+id/cartMembershipValidityTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="normal"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/colorBlack"
                />


            <TextView
                android:id="@+id/cartMembershipPriceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="normal"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/colorBlack" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Details"
        android:textColor="@color/appColor"
        android:textSize="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_20sdp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/selectorGrey"
        android:layout_marginTop="@dimen/_10sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_8sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Addon Price"
            android:textStyle="normal"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/cartMembershipdetailPriceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="normal"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/discountlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_8sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Promotional Discount"
            android:textStyle="normal"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/cartMembershipdetaildiscountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="normal"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/colorGreen" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/selectorGrey"
        android:layout_marginTop="@dimen/_10sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_8sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Order Total"
            android:textStyle="normal"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/cartMembershipdetailTotalPriceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="normal"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/appColor" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/cartPlaceOrderBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:text="Place order"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/colorWhite"
        android:background="@color/appColor"/>
</LinearLayout>
</LinearLayout>
</layout>