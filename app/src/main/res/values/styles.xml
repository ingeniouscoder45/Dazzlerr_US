<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryDark">@color/appColor</item>
        <item name="colorAccent">@color/appColor</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="alertDialogTheme">@style/MyAlertDialogTheme</item>
    </style>

    <!-- Base application theme. without animations -->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition1</item>
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryDark">@color/appColor</item>
        <item name="colorAccent">@color/appColor</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="alertDialogTheme">@style/MyAlertDialogTheme</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textAppearance">@style/MyTextAppearance</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/fonts</item>
    </style>
    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:textColor">@color/appColor</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textAppearance">@style/MyTextAppearance</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/appColor</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="WindowAnimationTransition1">
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTabLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextTabLabel1" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>


    <style name="TextTabLabel2" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <!--        <item name="android:textStyle">bold</item>-->
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <!--===========Image Cropper=======-->
    <style name="CropperTheme" parent="@style/Base.Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryDark">@color/appColor</item>
        <item name="colorAccent">@color/appColor</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="vw_FilePickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryDark">@color/appColor</item>
        <item name="colorAccent">@color/appColor</item>
        <item name="actionOverflowMenuStyle">@style/vw_OverflowMenuStyle</item>

    </style>


    <!-- ToolBar菜单样式 -->
    <style name="vw_ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- 非溢出菜单字体颜色，想要修改溢出菜单内的字体颜色只能直接设置textColorPrimary但此选项会影响Title的颜色-->
        <!--<item name="actionMenuTextColor">#FFFFFF</item>-->
        <item name="android:textSize">16sp</item> <!-- 字体大小 -->
    </style>


    <!--===========DROID NINJA file picker=======-->
    <style name="LibAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryDark">@color/appColor</item>
        <item name="colorAccent">@color/appColor</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="PickerTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/appColor</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <style name="SmoothCheckBoxStyle">
        <item name="color_checked">@color/checkbox_color</item>
        <item name="color_unchecked">@android:color/white</item>
        <item name="color_unchecked_stroke">@color/checkbox_unchecked_color</item>
        <item name="color_tick">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NewDialogTheme">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowTitleStyle">@null</item>
    <item name="android:windowAnimationStyle">@style/dialogAnimationTransition</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="dialogAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/exit_to_bottom</item>
    </style>

    <!-- tooltip custom style -->

    <style name="ToolTipAltStyle" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_padding">16dp</item>
        <item name="ttlm_strokeWeight">0.6dp</item>
        <item name="ttlm_strokeColor">@color/colorBlack</item>
        <item name="ttlm_backgroundColor">#EB333131</item>
        <item name="ttlm_cornerRadius">6dp</item>
        <item name="ttlm_arrowRatio">1.2</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayAltStyle</item>
        <item name="ttlm_animationStyle">@style/ToolTipAltAnimation</item>
        <item name="ttlm_textStyle">@style/ToolTipAltTextStyle</item>
    </style>

    <style name="ToolTipAltTextStyle" parent="ToolTipTextStyle">
        <item name="android:textColor">#D6CECE</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolTipOverlayAltStyle" parent="ToolTipOverlayDefaultStyle">
        <item name="android:color">#D0FFFFFF</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="ToolTipAltAnimation">
<!--        <item name="android:windowExitAnimation">@anim/custom_anim_exit</item>-->
        <item name="android:windowEnterAnimation">@anim/custom_anim_enter</item>
    </style>

    <!--=============================-->
<!--
    <style name="searchAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/search_edit_anim</item>
        <item name="android:windowExitAnimation">@anim/search_edit_anim_exit</item>
    </style>-->

    <style name="Theme_Dialog" parent="NewDialogTheme">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


</resources>
